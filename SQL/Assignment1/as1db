
drop database mov;
create database mov;
use mov;

create table movie (movieid int,title varchar(100),year int,genreid int,directorid int,primary key (movieid));
insert into movie values (1,'forrest gump',1994,1,1);
insert into movie values (2,'interstellar',1994,4,2);
insert into movie values (3,'martian',2015,4,3);
insert into movie values (4,'pulp fiction',1994,1,4);
insert into movie values (5,'django',2012,3,4);
insert into movie values (6,'prestige',2006,2,2);
insert into movie values (7,'sully',2016,2,5);
create table director(directorid int,firstname varchar(200),lastname varchar(200),primary key (directorid));
